{
    "manifest_version": 3,
    "name": "TabStash",
    "version": "1.0.0",
    "description": "Archive your open tabs and restore them later instantly.",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icon-16.png",
            "32": "icon-32.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        }
    },
    "icons": {
        "16": "icon-16.png",
        "32": "icon-32.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "background": {
        "service_worker": "src/background.ts",
        "type": "module"
    },
    "permissions": [
        "tabs",
        "storage"
    ]
}